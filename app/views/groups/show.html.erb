<div class="my-cards-header-with-picture">
  <% if @group.avatar.attached? %>
    <%= image_tag @group.avatar.variant(resize_to_limit: [100,100]), class: 'pt-3 rounded-circle' %>
  <% end %>
  <div class = "my-header-title">
    <%= @group.name %>
  </div>
    <%= link_to 'Create New', new_group_path%>
</div>

<div class="my-cards-header">
  <div class= "my-header-title" >Average:</div>
  <div class= "my-header-title" ><%= @group.presentations.average(:amount) %></div>
</div>

<% @group.presentations.each do |presentation| %>
  <div class="my-card">
    <div class="left-side">
      <div class="my-title">
        <%= presentation.name%>
      </div>
      <div class="my-date">
        <%= presentation.created_at.to_date%>
      </div>
    </div>
    <div class="right-side my-title">
      <%= presentation.amount%>
    </div>
  </div>
<% end %>
