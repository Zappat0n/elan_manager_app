<div class="bg-secundary">
  <div class="my-cards-header">
    <div class= "my-header-title" >Average:</div>
    <div class= "my-header-title" ><%= @group.presentations.average(:amount) %></div>
  </div>

  <div class="my-container">
    <% @group.presentations.each do |presentation| %>
      <div class="my-card">
        <div class="left-side">
          <div class="my-title">
            <%= presentation.name%>
          </div>
          <div class="my-date">
            <%= presentation.created_at.to_date%>
          </div>
        </div>
        <div class="right-side">
          <div class="my-title">
            <%= presentation.amount%>
          </div>
          <div class="my-date">
            <%= presentation.author.name %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
