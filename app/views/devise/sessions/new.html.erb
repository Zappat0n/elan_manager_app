<div class="container-fluid d-flex align-items-center">
  <div class="card my-5 shadow-lg col-xs-9 col-md-6 col-lg-3 mx-auto">
    <h2 class= "card-header text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field pt-3">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field d-none">
        <%= f.label :password %><br />
        <%= f.password_field :password, value: "123456" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field pt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions pt-2 pb-4 d-flex flex-row justify-content-between">
        <%= f.submit "Log in" %>

        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      </div>
    <% end %>
  </div>
</div>
