<header>
  <nav class="navbar-expand-lg bg-transparent d-flex justify-content-between align-items-baseline border-bottom-1 px-0">
    <div class="navbar-brand px-0 mx-0">
      <%= link_to root_path, class:"text-overlay" do %>
        <%= image_tag 'logo_elan.png', size: '91x18' %>
      <% end%>
    </div>

    <div class="text-center">
      <%= @title %>
    </div>
    <div class="nav-item dropdown show mr-4">
        <a class="" href="#" role="button" id="menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-bars"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="menu">
          <% navbar_dropdown_items.each do |line| %>
            <%= line %>
          <% end %>
        </div>
    </div>
  </nav>
</header>
