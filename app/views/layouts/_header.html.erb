<header>
  <nav class="navbar-expand-lg bg-transparent d-flex justify-content-between align-items-baseline border-bottom-1 px-5">
    <div class="navbar-brand">
      <%= link_to root_path, class:"text-overlay" do %>
        <%= image_tag('logo_elan.png', size: '91x18')%>
      <% end%>
    </div>

    <% if @title%>
      <%= @title %>
    <% end %>
    <div class="nav-item dropdown show">
        <a class="" href="#" role="button" id="menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-bars"></i>
        </a>
        <% if current_user%>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="menu">
            <%=link_to "Main page", root_path, class: "dropdown-item"%>
            <%=link_to "Sign out", users_sign_out_path, method: :delete, class: "dropdown-item"%>
          </div>
        <% else %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="menu">
            <%= link_to "Sign in", users_sign_in_path, class: "dropdown-item" %>
            <%= link_to "Sign up", users_sign_up_path, class: "dropdown-item" %>
          </div>
        <% end %>
    </div>
  </nav>
</header>
